<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- Permisos de ubicación (obligatorios) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Permiso de micrófono (optativo) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Permiso de vibración (para feedback háptico de accesibilidad) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recetas"
        tools:targetApi="31" >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Recetas" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Content Provider para compartir datos de recetas -->
        <!-- Comentado temporalmente - usar frontend.ContentProviders en su lugar -->
        <!--
        <provider
            android:name=".providers.RecetasContentProvider"
            android:authorities="com.example.recetas.provider"
            android:exported="true"
            android:grantUriPermissions="true" />
        -->
        
        <!-- Widget de Receta del Día -->
        <receiver
            android:name=".frontend.RecetaDelDiaWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_receta_del_dia_info" />
        </receiver>
        
        <!-- Widget de Minuta Semanal -->
        <receiver
            android:name=".frontend.MinutaSemanalWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_minuta_semanal_info" />
        </receiver>
        
        <!-- Widget de Estadísticas -->
        <receiver
            android:name=".frontend.EstadisticasWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_estadisticas_info" />
        </receiver>
    </application>

</manifest>
